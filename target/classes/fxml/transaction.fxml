<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.stockwise.controller.TransactionController"
    spacing="15"
    styleClass="menu-root">

    <fx:include fx:id="header" source="header.fxml" />

    <VBox spacing="12" styleClass="card">

        <Label text="Transaction Management"
            styleClass="section-title" />

        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints percentWidth="21" />
                <ColumnConstraints percentWidth="15" />
            </columnConstraints>

            <ComboBox fx:id="productBox"
                promptText="Choose Product"
                prefWidth="155"
                styleClass="combo-box"
                GridPane.columnIndex="0"
            />

            <ComboBox fx:id="typeBox"
                promptText="Type"
                styleClass="combo-box"
                prefWidth="100"
                GridPane.columnIndex="1" />

            <TextField fx:id="qtyField"
                promptText="Quantity"
                styleClass="input"
                GridPane.columnIndex="2"
            />

            <Button text="Add"
                onAction="#handleSubmit"
                styleClass="primary-button"
                GridPane.columnIndex="3"
            />
        </GridPane>


        <HBox spacing="10">

            <TextField fx:id="searchfield"
                promptText="Search transaction..."
                styleClass="input"
            />

            <Button text="Update"
                onAction="#handleUpdate2"
                styleClass="secondary-button"
            />

            <Region HBox.hgrow="ALWAYS" />

            <Button text="Import CSV"
                onAction="#importCSV2"
                styleClass="CSV-button"
            />
            <Button text="Export CSV"
                onAction="#exportCSV2"
                styleClass="CSV-button"
            />
        </HBox>
    </VBox>

    <VBox spacing="10" styleClass="card">

        <Label text="Transaction History"
            styleClass="section-title" />

        <TableView fx:id="tableView" styleClass="table-view">
            <columns>
                <TableColumn fx:id="noCol" text="No" />
                <TableColumn fx:id="t_idCol" text="Transaction ID" />
                <TableColumn fx:id="p_idCol" text="Product ID" />
                <TableColumn fx:id="productCol" text="Product Name" />
                <TableColumn fx:id="typeCol" text="Type" />
                <TableColumn fx:id="qtyCol" text="Qty" />
                <TableColumn fx:id="dateCol" text="Date" />
            </columns>
        </TableView>

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button text="Delete Selected"
                onAction="#handleDelete2"
                styleClass="danger-button" />

            <Button text="Delete All"
                onAction="#handleDeleteAll2"
                styleClass="danger-button" />
        </HBox>

    </VBox>

</VBox>