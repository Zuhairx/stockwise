<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.stockwise.controller.ProductController"
    spacing="15"
    styleClass="menu-root">

    <fx:include source="header.fxml" fx:id="header" />

    <VBox spacing="12" styleClass="card">

        <Label text="Product Management"
            styleClass="section-title" />

        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints percentWidth="25" />
                <ColumnConstraints percentWidth="25" />
                <ColumnConstraints percentWidth="25" />
                <ColumnConstraints percentWidth="25" />
            </columnConstraints>

            <TextField fx:id="nameField"
                promptText="Product Name"
                styleClass="input" />

            <TextField fx:id="categoryField"
                promptText="category"
                styleClass="input"
                GridPane.columnIndex="1" />

            <TextField fx:id="priceField"
                promptText="Price"
                styleClass="input"
                GridPane.columnIndex="2" />

            <Button text="Add"
                onAction="#handleAdd"
                styleClass="primary-button"
                GridPane.columnIndex="3" />
        </GridPane>

        <HBox spacing="10" GridPane.columnIndex="4">
            <TextField fx:id="searchField"
                promptText="Search product..."
                styleClass="input"
                prefWidth="150"
            />

            <Button text="Update"
                onAction="#handleUpdate"
                styleClass="secondary-button" />

        </HBox>

    </VBox>

    <VBox spacing="10" styleClass="card">

        <Label text="Product List"
            styleClass="section-title" />

        <TableView fx:id="tableView" styleClass="table-view">
            <columns>
                <TableColumn fx:id="noCol" text="No" />
                <TableColumn fx:id="idCol" text="Product ID" />
                <TableColumn fx:id="catCol" text="Type" />
                <TableColumn fx:id="nameCol" text="Name" />
                <TableColumn fx:id="priceCol" text="Price" />
                <TableColumn fx:id="stockCol" text="Stock" />
            </columns>
        </TableView>

        <HBox spacing="10" alignment="CENTER_LEFT">

            <Button text="Clear Field"
                onAction="#handleClearField"
                styleClass="clear-button" />

            <Region HBox.hgrow="ALWAYS" />

            <Button text="Delete Selected"
                onAction="#handleDelete"
                styleClass="danger-button" />

            <Button text="Delete All"
                onAction="#handleDeleteAll"
                styleClass="danger-button" />
        </HBox>

    </VBox>

</VBox>